#!/usr/bin/env bash
#=======================================#
# title       : video downloader        #
# author      : sunless47               #
# description : download videos at 480p #
#=======================================#

# error handling (set -euo pipefail)
set -o errexit
set -o nounset
set -o pipefail

# download with yt-dlp
yt-dlp \
		--progress \
		--format-sort "res:720" \
		--embed-subs \
		--embed-chapters \
		"$1"
